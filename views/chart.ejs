<h1>Your Consumption Stats</h1>


<canvas id="myChart"></canvas>
<script>
var ctx = document.getElementById("myChart").getContext('2d');
var chart = new Chart(ctx, {
   type: 'bar',
   data: {
      labels: [
		<% for(var i = 1; i < stats.length; i++) {%>
			<%= i %>,
		<% } %>
      ],
      datasets: [{
         label: 'Water Drank',
         data: [
         	<% stats.forEach(function(stat){ %>
         		<%= stat.hasDrank %>,
         	<% }); %>
         ],
         backgroundColor: '#dc3912'
      }, {
         label: 'Difference (Expected Drinks - Water Drank)',
         data: [
         	<%stats.forEach(function(stat){ %>
         		<%= stat.diff %>,
         	<% }); %>
         ],
         backgroundColor: '#3366cc'
      }]
   },
   options: {
      responsive: false,
      legend: {
         position: 'right'
      },
      scales: {
         xAxes: [{
            stacked: true
         }],
         yAxes: [{
            stacked: true
         }]
      }
   }
});

</script>





